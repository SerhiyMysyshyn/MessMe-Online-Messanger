<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enterPinMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.EnterPinCodeActivity">

    <ImageView
        android:id="@+id/fingerprint_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/pin_app_layout_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"
        app:srcCompat="@drawable/baseline_fingerprint_24"
        app:tint="@color/text_hint" />

    <LinearLayout
        android:id="@+id/pin_app_layout_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/custom_messages_list_item"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/enter_new_pin"
            android:textAlignment="center"
            android:textColor="@color/text_hint"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <EditText
                android:id="@+id/e_editTextNumberPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:foreground="@drawable/custom_button_foreground_8dp"
                android:background="@drawable/rounded_button"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:progress="0"
                android:progressDrawable="@drawable/custom_round_progressbar"
                android:progressTint="@color/lime" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/e_button_1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <Button
                    android:id="@+id/e_button_2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <Button
                    android:id="@+id/e_button_3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="28dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/e_button_4"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <Button
                    android:id="@+id/e_button_5"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <Button
                    android:id="@+id/e_button_6"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="28dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/e_button_7"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <Button
                    android:id="@+id/e_button_8"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <Button
                    android:id="@+id/e_button_9"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="28dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/e_button_clear"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="Clear"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/e_button_0"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/custom_numeric_button"
                    android:foreground="@drawable/navigator_button_ripple_effect"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="28dp" />


                <RelativeLayout
                    android:id="@+id/e_button_fingerprint"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:visibility="invisible"
                    android:background="@drawable/custom_numeric_button"
                    android:textColor="@color/lime"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="12sp" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/baseline_fingerprint_24"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/navigator_button_ripple_effect" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>