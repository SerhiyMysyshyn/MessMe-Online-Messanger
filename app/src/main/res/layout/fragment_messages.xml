<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentMessagesBackground"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/background_dark">

    <ImageView
        android:id="@+id/chatsBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/pattern1"
        app:tint="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/messagePanel"
            android:clipToPadding="false"
            android:paddingTop="16dp"
            android:paddingBottom="12dp"
            android:scrollbars="vertical" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/messagePanel"
            android:background="#1E000000" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/messagePanel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/custom_message_panel_background"
            android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/btnPhoto"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <EditText
            android:id="@+id/etText"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@android:color/transparent"
            android:foreground="@drawable/custom_button_foreground_8dp"
            android:textColor="@color/white"
            android:textColorHint="@color/text_hint"
            android:padding="8dp"
            android:hint="@string/message"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/btnPhoto"
            app:layout_constraintEnd_toStartOf="@+id/btnSend"
            app:layout_constraintStart_toEndOf="@+id/btnPhoto"
            app:layout_constraintTop_toTopOf="@+id/btnPhoto" />

        <ImageView
                android:id="@+id/btnSend"
                android:layout_width="48dp"
                android:layout_height="56dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_send"
                android:tint="@color/lime"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>