<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.chats_settings.ChatSettingsActivity">

    <include
        android:id="@+id/toolbarContainer4"
        layout="@layout/toolbar_buttons"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="2"
        app:layout_constraintTop_toBottomOf="@+id/toolbarContainer4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/custom_message_panel_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView2">

        <androidx.cardview.widget.CardView
            android:id="@+id/pre_Background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="65dp"
            app:cardBackgroundColor="@color/background_dark"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/resetButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:layout_gravity="right|top"
                android:layout_margin="8dp"
                android:background="@drawable/custom_messages_list_item"
                android:text="Скинути" />

            <ImageView
                android:id="@+id/pre_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pattern23" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="-60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bgColorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:background="@drawable/custom_friends_list_item"
                android:text="Колір фону" />

            <Button
                android:id="@+id/tintColorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                android:background="@drawable/custom_friends_list_item"
                android:text="Відтінок" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>